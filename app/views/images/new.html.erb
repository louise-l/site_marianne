<% subcategories = ['A costume for Just', 'Backstage @ Situationist'] %>
<% categories = ['fashion', 'photography'] %>

<div class = 'form'>
   <%= form_for(@image) do |f| %>
      <%= f.label :category %>
      <%= f.select :category, categories %>
      <%= f.label :sub_category %>
      <%= f.select :sub_category, subcategories %>
      <%= f.label :date, 'Format AAAAMM' %>
      <%= f.number_field :date %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :photo %>
      <%= f.file_field :photo, direct_upload: true, as: :file%>
      <%= f.submit 'GO'%>
   <% end %>
</div>

 
